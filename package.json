{
  "name": "mice-papai-cv",
  "version": "1.1.0",
  "description": "Mice Pápai CV",
  "main": "build/build.js",
  "scripts": {
    "build": "npm run pug:build && npm run css:build",
    "pug:watch": "nodemon -e pug/* -x \"npm run pug:build\"",
    "pug:build": "node build/build.js",
    "css:test": "sass --check css/src/q.scss",
    "css:build": "sass --style compressed css/src/q.scss css/q.min.css",
    "css:watch": "sass --style compressed --watch css/src/q.scss:css/q.min.css",
    "test": "npm run css:test "
  },
  "hooks": {
    "pre-commit": "npm run test"
  },
  "repository": "github:qwhex/qwhex.github.io",
  "keywords": [
    "cv",
    "qwhex",
    "mice papai",
    "micemusculus",
    "spa"
  ],
  "author": "Mice Pápai",
  "license": "ISC",
  "homepage": "https://qwhex.github.io",
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^5.6.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.1.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.4",
    "nyc": "^13.0.1",
    "pug": "^2.0.3",
    "sass": "^1.14.1"
  }
}
